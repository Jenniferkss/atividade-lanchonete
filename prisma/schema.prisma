generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
}

enum Categoria {
    LANCHE
    BEBIDA
    SOBREMESA
    COMBO
}

model Produto {
    id         Int       @id @default(autoincrement())
    nome       String
    descricao  String?
    categoria  Categoria
    preco      Decimal   @db.Decimal(10, 2)
    disponivel Boolean   @default(true)
    createdAt  DateTime  @default(now())
    update     DateTime  @updatedAt

    @@map("produtos")
}
